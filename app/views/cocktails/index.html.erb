    <div class="card-product-infos" >
    <h2 class="text-center"> <%= cocktail.name  %></h2>
    <!-- <i class="fas fa-trash-alt"> -->
     <p> <%= link_to "Show", cocktail_path(cocktail)%> </p>
    </div>
  </div>
<% end %>
</div>

